<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_folder_list"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.torv.adam.aplayer.folerlist.FolderListActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/id_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:elevation="5dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/colorPrimary">
            <ImageView
                android:id="@+id/id_back"
                android:src="@drawable/back_icon"
                android:padding="13dp"
                android:background="?attr/selectableItemBackground"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <TextView
                android:layout_toRightOf="@id/id_back"
                android:layout_marginLeft="6dp"
                android:text="@string/app_name"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/id_open_file"
                android:src="@drawable/plus_icon"
                android:padding="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:background="?attr/selectableItemBackground"
                android:layout_width="48dp"
                android:layout_height="48dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <FrameLayout
        android:id="@+id/id_frg_holder"
        android:layout_marginTop="10dp"
        android:layout_below="@id/id_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/id_deny_hint"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:text="@string/permission_deny_hint2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
